@model DetailsStoreServiceViewModel;

@{
    ViewBag.Title = "Store Service Edit";
}

<div class="row col-mt-3">
    <form method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter your new service name!">
            <span asp-validation-for="Name" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Old fashon description!">
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" placeholder="Price for 1 hour">
            <span asp-validation-for="Price" class="small text-danger"></span>
        </div>

        <input class="btn btn-primary mt-3" type="submit" value="Edit" />

    </form>
</div>
