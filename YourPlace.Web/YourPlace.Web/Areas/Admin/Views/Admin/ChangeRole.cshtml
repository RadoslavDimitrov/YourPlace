@model ChangeUserRoleViewModel;

@{
    ViewBag.Title = "Change user role";
}

<div class="row col-mt-3">
    <form method="post">
        <div class="form-group">
            <label asp-for="Rolename"></label>
            <select asp-for="Rolename" class="form-control">
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role">@role</option>
                }
            </select>
            <span asp-validation-for="Rolename" class="small text-danger"></span>
        </div>

        <input class="btn btn-primary mt-3" type="submit" value="Save" />
    </form>
</div>
